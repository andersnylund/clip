{
  "manifest_version": 2,
  "name": "clip.so",
  "description": "The Chrome plugin for clip.so bookmarks",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://clip.so/*", "http://localhost:3000/*"],
      "js": ["src/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["bookmarks"],
  "background": {
    "persistent": false,
    "scripts": ["src/background.js"]
  }
}
