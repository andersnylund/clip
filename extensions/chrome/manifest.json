{
  "manifest_version": 2,
  "name": "clip.so Chrome Plugin",
  "description": "The Chrome bookmark plugin for clip.so",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://clip.so/*", "http://localhost:3000/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["bookmarks"]
}
