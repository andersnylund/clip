{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES2017", "DOM"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "sourceMap": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/chrome", "node"]
  },
  "include": ["src", "manifest.json"]
}
