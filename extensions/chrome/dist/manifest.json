{
  "manifest_version": 2,
  "name": "clip.so",
  "description": "The Chrome plugin for clip.so bookmarks",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["js/content.js"],
      "matches": ["https://clip.so/*", "http://localhost:3000/*"]
    }
  ],
  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["bookmarks", "https://clip.so/*", "http://localhost:3000/*"]
}
