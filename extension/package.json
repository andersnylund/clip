{
  "name": "clip-so-chrome-extension",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "watch": "webpack -w --config webpack.dev.js",
    "extension": "web-ext run --source-dir ./dist/ --keep-profile-changes --start-url http://localhost:3000 --browser-console",
    "firefox": "yarn extension --firefox-profile \"./.firefox\"",
    "chrome": "yarn extension --chromium-profile \"./.chrome\" --target chromium "
  },
  "author": "Anders Nylund",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chrome": "^0.0.127",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "web-ext": "^5.4.1",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1"
  }
}
