{
  "name": "extension",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "chrome": "yarn extension --chromium-profile \"./.chrome\" --target chromium",
    "dev": "webpack --config webpack.dev.js",
    "extension": "web-ext run --source-dir ./dist/ --keep-profile-changes --start-url http://localhost:3000",
    "firefox": "yarn extension --firefox-profile \"./.firefox\"",
    "test": "jest --coverage",
    "watch": "webpack -w --config webpack.dev.js"
  },
  "author": "Anders Nylund",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.3",
    "web-ext": "^5.4.1",
    "webpack": "^5.27.1",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1",
    "ua-parser-js": "^0.7.24",
    "webextension-polyfill-ts": "^0.25.0",
    "zod": "^2.0.0-beta.30"
  }
}
