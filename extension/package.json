{
  "name": "extension",
  "version": "1.0.9",
  "scripts": {
    "brave": "yarn extension --chromium-profile \"./.chrome\" --target chromium --chromium-binary \"/Applications/Brave Browser.app/Contents/MacOS/Brave Browser\"",
    "build": "NODE_ENV=production webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "extension": "web-ext run --source-dir ./dist/ --keep-profile-changes --start-url http://localhost:3000",
    "firefox": "yarn extension --firefox-profile \"./.firefox\"",
    "test": "jest --coverage",
    "watch": "webpack -w --config webpack.dev.js",
    "lint": "eslint ."
  },
  "author": "Anders Nylund",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.5",
    "autoprefixer": "^10.2.6",
    "css-loader": "^5.2.6",
    "dotenv-webpack": "^7.0.3",
    "jest": "^27.0.4",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.1",
    "style-loader": "^3.0.0",
    "tailwindcss": "^2.2.4",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "web-ext": "^6.0.0",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "swr": "^0.5.6",
    "ua-parser-js": "^0.7.28",
    "webextension-polyfill-ts": "^0.25.0",
    "zod": "^3.0.2"
  }
}
