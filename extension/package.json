{
  "name": "clip-so-chrome-extension",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "chrome": "yarn extension --chromium-profile \"./.chrome\" --target chromium",
    "dev": "webpack --config webpack.dev.js",
    "extension": "web-ext run --source-dir ./dist/ --keep-profile-changes --start-url http://localhost:3000 --browser-console",
    "firefox": "yarn extension --firefox-profile \"./.firefox\"",
    "test": "jest --coverage",
    "watch": "webpack -w --config webpack.dev.js"
  },
  "author": "Anders Nylund",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@types/chrome": "^0.0.128",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "web-ext": "^5.4.1",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1",
    "webextension-polyfill-ts": "^0.22.0"
  }
}
