{
  "name": "extension",
  "version": "1.0.4",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "brave": "yarn extension --chromium-profile \"./.chrome\" --target chromium --chromium-binary \"/Applications/Brave Browser.app/Contents/MacOS/Brave Browser\"",
    "dev": "webpack --config webpack.dev.js",
    "extension": "web-ext run --source-dir ./dist/ --keep-profile-changes --start-url http://localhost:3000",
    "firefox": "yarn extension --firefox-profile \"./.firefox\"",
    "test": "jest --coverage",
    "watch": "webpack -w --config webpack.dev.js"
  },
  "author": "Anders Nylund",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "web-ext": "^6.0.0",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "ua-parser-js": "^0.7.28",
    "webextension-polyfill-ts": "^0.25.0",
    "zod": "^3.0.2"
  }
}
